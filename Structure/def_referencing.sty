%%TODO: labels & referencing
  \def\Label#1#2{\label{#1:#2}}
  \def\ChapLabel#1{\Label{Chap}{#1}}
  \def\SecLabel#1{\Label{S}{#1}}
  \def\EqLabel#1{\Label{Eq}{#1}}
  \def\PageLabel#1{\Label{P}{#1}}
  \def\DefLabel#1{\Label{Def}{#1}}
  \def\TableLabel#1{\Label{T}{#1}}

%% referencing
  \def\Ref#1#2{\ref{#1:#2}}
  \def\ChapRef#1{Chapter~\Ref{Chap}{#1}}
  \def\SecRef#1{Section~\Ref{S}{#1}}
  \def\EqRef#1{Equation~(\Ref{Eq}{#1})}
  \def\PageRef#1{Page~\pageref{P:#1}}
  \def\FigRef#1{Figure~\Ref{Figure}{#1}}
  \def\DefRef#1{Definition~\Ref{Def}{#1}}
  \def\TableRef#1{Table~\Ref{T}{#1}}

%% -bracketed version
  \def\RBrack#1{(#1)}
  \def\BSecRef#1{~\RBrack{\SectionRef{#1}}}
  \def\BEqRef#1{~\RBrack{\EqRef{#1}}}
  \def\BPageRef#1{~\RBrack{\PageRef{#1}}}
  \def\BFigRef#1{~\RBrack{\FigRef{#1}}}
  \def\BDefRef#1{~\RBrack{\DefRef{#1}}}
  \def\BTableRef#1{~\RBrack{\TableRef{#1}}}